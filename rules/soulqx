/*******************************

[rewrite_local]

^http[s]?:\/\/(api-chat.soulapp.cn|.*)\/chat\/limi url script-response-body https://raw.githubusercontent.com/ciaooo55/CLASH/main/rules/soulqx

[mitm] 

hostname = (.*|api-chat.soulapp.cn)

*******************************/


var body = $response['body'];
var url = $request['url'];

if (url.indexOf('/chat/limi') !== -1) {
    body = body.replace(/"limit":true/g, '"limit":false');
}

$done({'body': body});
